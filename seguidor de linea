#include <DCMotor.h>
#include <Servo.h>
#include "Infrarrojo.h"

bool interIzq = true;//variable para la interseccion. True para izquierda y False para derecha

int boton = 27;
int sensor_choque = 20;
int sensor_choque2 = 21;
Servo puerta; 
Servo mezclador;

Infrarrojo infraInterIzq (13, 400);//350 
Infrarrojo infraInterDer (11, 400);//350
Infrarrojo infraExterIzq (8, 350);
Infrarrojo infraExterDer (9, 350);
//Infrarrojo infraExternoDelDer(15, 320);

DCMotor motor_izq (4, 17, 16); 
DCMotor motor_der (5, 30, 41); 

void mover_izquierda()
{
  motor_izq.setSpeed(-35); //50
  motor_der.setSpeed(50);  //55
}
void mover_derecha()
{
  motor_der.setSpeed(-55);//55
  motor_izq.setSpeed(60); 
}
void mover_frente()
{
  motor_izq.setSpeed(42);//45
  motor_der.setSpeed(44);//44
}

void giro_izquierda()
{
  motor_izq.setSpeed(-45); 
  motor_der.setSpeed(56); 
  delay (500);
  while (infraInterIzq.lee_blanco());
}

void giro_derecha() {
  motor_izq.setSpeed(56);
  motor_der.setSpeed(-48);
  delay(500);//1500
  while (infraInterIzq.lee_blanco());
}

void interseccion() {
  if (interIzq == true)
    giro_izquierda();
  else if (interIzq == false)
    giro_derecha ();
  interIzq = !interIzq;
}

void giro_atras () 
{
   motor_izq.setSpeed (0);
   motor_der.setSpeed (0);
   puerta.write (167);
   delay(1300);
   puerta.write(80);
   delay(700);
  motor_izq.setSpeed (-37);
  motor_der.setSpeed (-37);
  delay (600);

  motor_izq.setSpeed(-52); 
  motor_der.setSpeed(52); 
  while (infraInterIzq.lee_blanco());
  
  }

void descargar_pelotitas()
{
  motor_izq.setSpeed(0);
  motor_der.setSpeed(0);
  delay(500);
  puerta.write(167);
  while (true) {
    for (int i = 0 ;i <= 180; i++){
      mezclador.write(i);
      }
    for (int a = 180;a >= 0;a--){
      mezclador.write(a);
    
      }
      
    }
 
  }

void seguidor() {
  
  if (infraExterDer.lee_negro() || infraExterIzq.lee_negro()) {
    interseccion();
  }
  else if (digitalRead(sensor_choque) == LOW || digitalRead(sensor_choque2) == LOW) {
    if  (digitalRead(boton) == LOW) {
   descargar_pelotitas();
   
    }
    else {
    giro_atras ();
   }
  }
  else if (infraInterDer.lee_blanco() && infraInterIzq.lee_blanco()) {
    mover_frente();
  }
  else if (infraInterDer.lee_blanco() && infraInterIzq.lee_negro()) {
    mover_izquierda();
  }
  else if (infraInterDer.lee_negro() && infraInterIzq.lee_blanco()) {
    mover_derecha();
  }
}

void setup() {
  pinMode (sensor_choque, INPUT);
  pinMode (sensor_choque2, INPUT);
  pinMode (boton,INPUT);
  Serial.begin(9600);
  puerta.attach(52);
  mezclador.attach(53);

  puerta.write(80);
}
void loop() { 
  seguidor();
}

